<%= form_tag payments_create_path do %>
  <article>
    <label class="amount">
      <span>Amount:</span>
      <input type="text" name="amount" value="500">
    </label>
  </article>

  <script
    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.application.credentials.dig(:stripe, :publishable_key) %>"
    data-description="Rails Stripe customer"
    data-amount="500"
    data-locale="auto"></script>
<% end %>
